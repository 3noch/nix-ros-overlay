{ lib, buildRosPackage, fetchurl, ament-cmake-core, ament-cmake-python }:
buildRosPackage {
  pname = "ros-foxy-ament-cmake-test";
  version = "0.9.6-r1";

  src = fetchurl {
    url = "https://github.com/ros2-gbp/ament_cmake-release/archive/release/foxy/ament_cmake_test/0.9.6-1.tar.gz";
    name = "0.9.6-1.tar.gz";
    sha256 = "b7f61624da074f07729aa5fe39bc44c1178f972eea76663e79b29b568dd84bb8";
  };

  buildType = "ament_cmake";
